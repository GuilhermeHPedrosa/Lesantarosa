<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cornersImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
        <item name="cornerSizeBottomLeft">4dp</item>
    </style>

    <style name="saleSummaryCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/saleSummaryShape</item>
        <item name="cardBackgroundColor">@color/grey</item>
    </style>

    <style name="saleSummaryShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="searchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="boxBackgroundColor">@color/lighter_grey</item>

        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="customInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/light_grey</item>

        <item name="boxBackgroundColor">@color/white</item>

        <item name="boxStrokeColor">@color/selector_box_stroke</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="customToolBarTitleAppearance" parent="Widget.Material3.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>