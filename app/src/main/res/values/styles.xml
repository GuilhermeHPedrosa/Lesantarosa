<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape -->

    <style name="defaultImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
        <item name="cornerSizeBottomLeft">4dp</item>
    </style>

    <style name="defaultButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeTopLeft">6dp</item>
        <item name="cornerSizeBottomRight">6dp</item>
        <item name="cornerSizeBottomLeft">6dp</item>
    </style>

    <style name="saleSummaryShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>

    <!-- Button -->

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:text">@string/default_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_default_button</item>
    </style>

    <!-- TextAppearance -->

    <style name="toolBarTitleAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="drawerItemTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- InputLayout -->

    <style name="defaultInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:textColorHint">@color/light_grey</item>

        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/selector_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
    </style>

    <style name="searchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">16sp</item>

        <item name="boxBackgroundColor">@color/lighter_grey</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="categoryInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">16sp</item>

        <item name="boxBackgroundColor">@color/lighter_grey</item>
        <item name="boxStrokeColor">@color/selector_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
    </style>

    <!-- InputEditText -->

    <style name="defaultInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="searchInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:padding">20dp</item>

        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="categoryInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:padding">20dp</item>

        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:maxLength">20</item>
    </style>

    <!-- Navigation -->

    <style name="drawerNavigationAppearance" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">?attr/colorPrimaryVariant</item>

        <item name="itemBackground">@color/selector_drawer_item_background</item>

        <item name="itemIconSize">20dp</item>
        <item name="itemIconTint">?attr/colorOnPrimary</item>

        <item name="itemTextColor">?attr/colorOnPrimary</item>
        <item name="itemTextAppearance">@style/drawerItemTextAppearance</item>

        <item name="subheaderColor">?attr/colorSecondary</item>
    </style>

</resources>